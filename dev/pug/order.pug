extends layout/no-footer

block variables
	-var title = 'Оформление заказа'

block content
	.breadcrumbs
		.container
			ul.breadcrumbs__list
				+breadcrumbs-item('Главная','/')
				+breadcrumbs-item('Каталог','/section.html')
				+breadcrumbs-item('Оформление заказа')
	section.page-section
		.order
			.container
				form.order__form
					.order__form-content
						.order__column.order__column--large
							.order__tabs-mobile-info.active(data-tab="2")
								h4.order__title.mobile-hidden Адрес получателя
								.order__map-container.mobile-hidden 
									div#map(style="width: 100%; height: 400px")

								h4.order__title Город получения
								.order__container
									.order__address-info
										.order__address-component
											.order__address-row.not-empty
												label
													span Регион
													select
														option Регион
														option Москва
														option Калининград
														option Киев

											.order__address-row.not-empty
												label
													span Населенный пункт
													select
														option Населенный пункт
														option Москва
														option Калининград
														option Киев

											.order__address-row
												label
													span Адрес
													textarea

											.order__address-row.order__address-row-mob-50
												label
													span Квартира
													input

												label
													span Подъезд
													input

												label
													span Этаж
													input

												label
													span Индекс
													input

											.order__address-row
												.order__address-desc
													span.red *
													span - обязательно для заполнения

											.order__address-row
												label
													span Фамилия и Имя по паспорту
													span.red *
													input
													.order__address-desc Полные фамилия, имя и отчество могут потребоваться при получении заказа

											.order__address-row
												label
													span Email
													span.red *
													input

												label
													span Телефон
													span.red *
													input
													.order__address-desc Номер телефона используется для оповещений об изменениях статуса заказа

								.order__mobile-nav-block
									input.order__submit.order__next(type="button" value="К способам доставки" data-tab="3")
									a.order__submit(href="sections.html")
										<svg width="6" height="4" viewBox="0 0 6 4" fill="none" xmlns="http://www.w3.org/2000/svg">
										<path d="M5.64641 3.35358L2.64641 0.353577M3.35352 0.353577L0.353516 3.35358" stroke="#595959"/>
										</svg>
										span Вернуться в магазин

							.order__tabs-mobile-info(data-tab="3")
								h4.order__title Способ получения
								.order__container.order__delivery
									.order__select
										label
											input(type="radio" name="delivery" value="Доставка")
											span Доставка
									
									.order__select
										label 
											input(type="radio" name="delivery" value="Самовывоз")
											span Самовывоз

								.order__mobile-nav-block
									input.order__submit.order__next(type="button" value="К способам оплаты" data-tab="4")
									a.order__submit(href="sections.html")
										<svg width="6" height="4" viewBox="0 0 6 4" fill="none" xmlns="http://www.w3.org/2000/svg">
										<path d="M5.64641 3.35358L2.64641 0.353577M3.35352 0.353577L0.353516 3.35358" stroke="#595959"/>
										</svg>
										span Вернуться в магазин

							.order__tabs-mobile-info(data-tab="4")
								h4.order__title Платежная система
								.order__container.order__payment
									.order__select
										label 
											input(type="radio" name="payment" value="Доставка")
											span Картой онлайн
									
									.order__select
										label 
											input(type="radio" name="payment" value="Самовывоз")
											span Самовывоз

								h4.order__title Дополнительно
								.order__container
									.order__address-row
										textarea(placeholder="Комментарий к заказу")
								
								.order__mobile-nav-block
									input.order__submit(type="submit" value="Оформить заказ")
									a.order__submit(href="sections.html") 
										<svg width="6" height="4" viewBox="0 0 6 4" fill="none" xmlns="http://www.w3.org/2000/svg">
										<path d="M5.64641 3.35358L2.64641 0.353577M3.35352 0.353577L0.353516 3.35358" stroke="#595959"/>
										</svg>
										span Вернуться в магазин
						
						.order__tabs-mobile
							.order__tabs-mobile-item(data-tab=1)
								a(href="cart.html") Корзина
							.order__tabs-mobile-item.active(data-tab=2)
								span Контактная информация
							.order__tabs-mobile-item(data-tab=3)
								span Доставка
							.order__tabs-mobile-item(data-tab=4)
								span Оплата

						.order__column.order__column--small.active#order-info
							.order__open-btn#order-info-button
								.order__open-btn-icon
									<svg width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M21.873 4.59643C21.7471 4.41594 21.5445 4.30438 21.3243 4.29497L7.67753 3.70673C7.28598 3.6896 6.95878 3.99189 6.94204 4.38162C6.9254 4.7712 7.2272 5.10038 7.61688 5.11712L20.3398 5.66557L17.8382 13.4707H6.70582L4.69459 2.51972C4.65038 2.27971 4.4856 2.07948 4.25834 1.99032L0.96429 0.696223C0.601244 0.554086 0.191575 0.732409 0.0489956 1.09501C-0.0933376 1.45781 0.0849359 1.86773 0.447785 2.01031L3.37672 3.16093L5.42344 14.3041C5.48513 14.6391 5.77708 14.8824 6.11782 14.8824H6.45734L5.68206 17.0359C5.61717 17.2163 5.64391 17.4166 5.75434 17.5733C5.86462 17.7301 6.04397 17.8233 6.23544 17.8233H6.77922C6.44227 18.1983 6.23544 18.6921 6.23544 19.2351C6.23544 20.4028 7.18559 21.3527 8.35306 21.3527C9.52053 21.3527 10.4707 20.4028 10.4707 19.2351C10.4707 18.6921 10.2639 18.1983 9.92695 17.8233H14.5439C14.2068 18.1983 14 18.6921 14 19.2351C14 20.4028 14.9499 21.3527 16.1176 21.3527C17.2854 21.3527 18.2352 20.4028 18.2352 19.2351C18.2352 18.6921 18.0285 18.1983 17.6916 17.8233H18.3529C18.6779 17.8233 18.9412 17.56 18.9412 17.2351C18.9412 16.9102 18.6778 16.6469 18.3529 16.6469H7.07241L7.70761 14.8822H18.3529C18.6598 14.8822 18.9315 14.6839 19.0249 14.3919L21.9661 5.21544C22.0336 5.006 21.999 4.77701 21.873 4.59643ZM8.35311 20.1765C7.83404 20.1765 7.41192 19.7544 7.41192 19.2353C7.41192 18.7163 7.83404 18.2941 8.35311 18.2941C8.87218 18.2941 9.29425 18.7163 9.29425 19.2353C9.29425 19.7544 8.87218 20.1765 8.35311 20.1765ZM16.1176 20.1765C15.5986 20.1765 15.1765 19.7544 15.1765 19.2353C15.1765 18.7163 15.5986 18.2941 16.1176 18.2941C16.6367 18.2941 17.0588 18.7163 17.0588 19.2353C17.0588 19.7544 16.6367 20.1765 16.1176 20.1765Z"></path>
									</svg>
								.order__open-btn-text 
									span.open Скрыть информацию о заказе
									span.show Показать информацию о заказе
									<svg width="6" height="4" viewBox="0 0 6 4" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M5.64641 3.35358L2.64641 0.353577M3.35352 0.353577L0.353516 3.35358" stroke="#595959"/>
									</svg>
								.order__open-btn-price 10000 ₽ 

							.order__info#order-info-block
								.order__mobile-column
									.order__row.mobile-hidden
										input(type="submit" value="Оформить заказ")

									h4.order__title.mobile-hidden Ваш заказ
									.order__row.order__row--justify.mobile-hidden
										span Товары(1)
										span 10000 ₽ 
									.order__row.order__row--justify
										span Сумма товаров
										span 10000 ₽ 
									
									h4.order__title.mobile-hidden Доставка
									.order__row.order__row--justify
										span Способ получения
										span Не указано
									.order__row.order__row--justify
										span Адрес доставки
										span Не указано
									.order__row.order__row--justify
										span Стоимость доставки
										span 0 ₽
									.order__row.order__row--justify.order__row--bold.order__mobile-sum
										span Итого
										span.order__red 10000 ₽

									hr
								.order__mobile-column.order__mobile-column--border
									h4.order__title.mobile-hidden Состав заказа
									.order__row
										a(href="product.html").order__item
											.order__item-pic
												img(src="static/images/common/product1.jpg")
											.order__item-desc
												h4.order__item-title Название товара
												p.order__item-count 1 шт



					.order__form-content.mobile-hidden
						input.order__submit(type="submit" value="Оформить заказ")
					